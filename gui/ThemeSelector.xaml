<UserControl x:Class="LyricThemeClassifier.ThemeSelector"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="24" Width="128">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="16"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <CheckBox Name="checkBoxIsActive" Grid.Column="0"/>
        <TextBlock Name="themeName" Grid.Column="1">default name</TextBlock>
    </Grid>
</UserControl>
